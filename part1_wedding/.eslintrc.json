{
  "extends": [
    "react-app",
    "react-app/jest",
    "airbnb",
    "plugin:react/jsx-runtime",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "ignorePatterns": [
    "node_modules/",
    "**/node_modules/",
    "/**/node_modules/*",
    "public/",
    "dist/",
    "build/",
    ".eslintrc.cjs",
    ".prettierrc.cjs"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "18.2"
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "error",
    "react/jsx-no-target-blank": "off",
    "import/no-extraneous-dependencies": "off",
    "react/function-component-definition": [
      2,
      {
        "namedComponents": [
          "arrow-function",
          "function-declaration"
        ]
      }
    ]
  }
}